{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": true,
        "noFallthroughCasesInSwitch": true,
        "types": ["node", "svelte", "vue"],
        "typeRoots": ["./node_modules", "../node_modules"],
        "skipLibCheck": true,
        "sourceRoot": "../src",
        "baseUrl": "../",
        "outDir": "../packages",
        "plugins": [{ "transform": "@nativescript/webpack/dist/transformers/NativeClass", "type": "raw" }]
    },
    "include": ["../src/**/*", "../references.d.ts", "../demo-snippets/**/*", "../demo-vue/types"],
    "exclude": ["node_modules"],
    "compileOnSave": false
}
